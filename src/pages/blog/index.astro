---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { sanityClient, urlFor } from '../../lib/sanity';

// Fetch all blog posts
const allPosts = await sanityClient.fetch(`
  *[_type == "blogPost"] | order(publishedAt desc) {
    title,
    slug,
    excerpt,
    coverImage,
    author,
    publishedAt,
    category,
    tags,
    featured
  }
`);

// Separate featured posts
const featuredPosts = allPosts.filter((post: any) => post.featured);
const regularPosts = allPosts.filter((post: any) => !post.featured);

// Get unique categories
const categories = [...new Set(allPosts.map((post: any) => post.category).filter(Boolean))];

// Format date helper
const formatDate = (date: string) => {
  return new Date(date).toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
};
---

<BaseLayout title="Blog - Bil√≥g" description="Read my latest thoughts on technology, design, and life">
  <!-- Hero Section with Floating Blobs -->
  <section class="relative py-24 bg-black text-white overflow-hidden">
    <!-- Animated floating blobs -->
    <div class="absolute inset-0 opacity-20 pointer-events-none">
      <div class="absolute top-10 left-10 w-96 h-96 bg-purple-600 rounded-full mix-blend-screen filter blur-3xl animate-float"></div>
      <div class="absolute bottom-10 right-10 w-80 h-80 bg-indigo-600 rounded-full mix-blend-screen filter blur-3xl animate-float-slow"></div>
      <div class="absolute top-1/2 left-1/2 w-72 h-72 bg-violet-600 rounded-full mix-blend-screen filter blur-3xl animate-pulse-glow"></div>
    </div>

    <div class="container mx-auto px-4 relative z-10">
      <div class="text-center max-w-4xl mx-auto">
        <h1 class="text-6xl md:text-7xl font-extrabold mb-6 animate-fadeInUp">
          üìö Blog
        </h1>
        <p class="text-xl md:text-2xl text-gray-300 mb-8 animate-fadeInUp" style="animation-delay: 0.2s;">
          Thoughts, ideas, and stories about technology, design, and life
        </p>
        
        <!-- Categories Filter -->
        {categories.length > 0 && (
          <div class="flex flex-wrap justify-center gap-3 animate-fadeInUp" style="animation-delay: 0.4s;">
            <button class="px-6 py-2 bg-white text-black rounded-full font-semibold hover:scale-105 transition-all duration-300 category-filter" data-category="all">
              All Posts
            </button>
            {categories.map((category: string) => (
              <button 
                class="px-6 py-2 bg-white/10 backdrop-blur-sm border border-white/20 text-white rounded-full font-semibold hover:bg-white hover:text-black hover:scale-105 transition-all duration-300 category-filter" 
                data-category={category}
              >
                {category.charAt(0).toUpperCase() + category.slice(1)}
              </button>
            ))}
          </div>
        )}
      </div>
    </div>
  </section>

  <!-- Featured Posts Section -->
  {featuredPosts.length > 0 && (
    <section class="py-16 bg-zinc-950 relative overflow-hidden">
      <!-- Background blob -->
      <div class="absolute inset-0 opacity-10 pointer-events-none">
        <div class="absolute top-0 right-0 w-96 h-96 bg-purple-600 rounded-full filter blur-3xl animate-pulse-glow"></div>
      </div>

      <div class="container mx-auto px-4 relative z-10">
        <h2 class="text-4xl font-bold mb-12 text-center scroll-fade-in">
          <span class="gradient-text">
            ‚≠ê Featured Posts
          </span>
        </h2>
        <div class="grid md:grid-cols-2 gap-8">
          {featuredPosts.map((post: any, index: number) => (
            <article 
              class="group relative bg-white/5 backdrop-blur-sm border border-white/10 rounded-3xl overflow-hidden hover:bg-white/10 hover:border-purple-500/50 hover:-translate-y-2 hover:shadow-2xl hover:shadow-purple-500/20 transition-all duration-500 scroll-fade-in"
              style={`animation-delay: ${index * 0.1}s;`}
            >
              {post.coverImage && (
                <div class="relative h-80 overflow-hidden">
                  <img 
                    src={urlFor(post.coverImage).width(800).height(500).url()} 
                    alt={post.title}
                    class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700"
                  />
                  <div class="absolute inset-0 bg-gradient-to-t from-black via-black/50 to-transparent"></div>
                  {post.category && (
                    <span class="absolute top-4 left-4 px-4 py-2 bg-purple-600 text-white rounded-full text-sm font-semibold">
                      {post.category}
                    </span>
                  )}
                </div>
              )}
              <div class="p-8">
                <div class="flex items-center gap-4 text-sm text-gray-400 mb-4">
                  {post.author && <span>üë§ {post.author}</span>}
                  {post.publishedAt && <span>üìÖ {formatDate(post.publishedAt)}</span>}
                </div>
                <h3 class="text-3xl font-bold mb-4 text-white group-hover:text-purple-400 transition-colors duration-300">
                  <a href={`/blog/${post.slug.current}`}>{post.title}</a>
                </h3>
                <p class="text-gray-400 mb-6 leading-relaxed line-clamp-3">{post.excerpt}</p>
                {post.tags && post.tags.length > 0 && (
                  <div class="flex flex-wrap gap-2 mb-6">
                    {post.tags.slice(0, 3).map((tag: string) => (
                      <span class="px-3 py-1 bg-purple-600/20 border border-purple-500/30 text-purple-300 rounded-full text-xs font-medium">
                        #{tag}
                      </span>
                    ))}
                  </div>
                )}
                <a 
                  href={`/blog/${post.slug.current}`}
                  class="inline-flex items-center gap-2 text-purple-400 font-bold hover:text-purple-300 transition-colors group"
                >
                  Read Full Post
                  <svg class="w-5 h-5 group-hover:translate-x-2 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                  </svg>
                </a>
              </div>
            </article>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- All Posts Grid -->
  <section class="py-16 bg-black relative overflow-hidden">
    <!-- Background blob -->
    <div class="absolute inset-0 opacity-10 pointer-events-none">
      <div class="absolute bottom-0 left-0 w-96 h-96 bg-indigo-600 rounded-full filter blur-3xl animate-float-slow"></div>
    </div>

    <div class="container mx-auto px-4 relative z-10">
      <h2 class="text-4xl font-bold mb-12 text-center scroll-fade-in">
        <span class="gradient-text">
          {featuredPosts.length > 0 ? 'üìö All Posts' : 'üìö Latest Posts'}
        </span>
      </h2>
      
      {regularPosts.length === 0 && featuredPosts.length === 0 ? (
        <div class="text-center py-20">
          <div class="text-8xl mb-6">üìù</div>
          <h3 class="text-3xl font-bold text-white mb-4">No Posts Yet</h3>
          <p class="text-gray-400 text-lg">Check back soon for new content!</p>
        </div>
      ) : (
        <div class="grid md:grid-cols-3 gap-8" id="posts-grid">
          {(regularPosts.length > 0 ? regularPosts : featuredPosts).map((post: any, index: number) => (
            <article 
              class="group bg-white/5 backdrop-blur-sm border border-white/10 rounded-2xl overflow-hidden hover:bg-white/10 hover:border-purple-500/50 hover:-translate-y-2 hover:shadow-2xl hover:shadow-purple-500/20 transition-all duration-500 scroll-fade-in post-card"
              style={`animation-delay: ${index * 0.05}s;`}
              data-category={post.category || 'uncategorized'}
            >
              {post.coverImage ? (
                <div class="relative h-56 overflow-hidden">
                  <img 
                    src={urlFor(post.coverImage).width(500).height(300).url()} 
                    alt={post.title}
                    class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700"
                  />
                  {post.category && (
                    <span class="absolute top-3 right-3 px-3 py-1 bg-purple-600 text-white rounded-full text-xs font-semibold shadow-lg">
                      {post.category}
                    </span>
                  )}
                </div>
              ) : (
                <div class="h-56 bg-gradient-to-br from-purple-600/20 to-indigo-600/20 flex items-center justify-center">
                  <span class="text-6xl">üìñ</span>
                </div>
              )}
              <div class="p-6">
                <div class="flex items-center gap-3 text-xs text-gray-500 mb-3">
                  {post.publishedAt && <span>üìÖ {formatDate(post.publishedAt)}</span>}
                </div>
                <h3 class="text-xl font-bold mb-3 text-white group-hover:text-purple-400 transition-colors duration-300 line-clamp-2">
                  <a href={`/blog/${post.slug.current}`}>{post.title}</a>
                </h3>
                <p class="text-gray-400 mb-4 line-clamp-2 text-sm">{post.excerpt}</p>
                <a 
                  href={`/blog/${post.slug.current}`}
                  class="inline-flex items-center gap-2 text-purple-400 font-semibold hover:text-purple-300 transition-colors text-sm group"
                >
                  Read More
                  <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </a>
              </div>
            </article>
          ))}
        </div>
      )}
    </div>
  </section>

  <!-- Newsletter Section -->
  <section class="py-20 bg-zinc-950 text-white relative overflow-hidden">
    <!-- Floating blobs -->
    <div class="absolute inset-0 opacity-20 pointer-events-none">
      <div class="absolute top-0 left-0 w-96 h-96 bg-purple-600 rounded-full filter blur-3xl animate-float"></div>
      <div class="absolute bottom-0 right-0 w-96 h-96 bg-indigo-600 rounded-full filter blur-3xl animate-float-slow"></div>
    </div>

    <div class="container mx-auto px-4 text-center relative z-10">
      <div class="max-w-2xl mx-auto scroll-fade-in">
        <div class="text-6xl mb-6">‚úâÔ∏è</div>
        <h2 class="text-4xl font-bold mb-4">Stay Updated</h2>
        <p class="text-xl text-gray-300 mb-8">
          Get notified when I publish new posts. No spam, unsubscribe anytime.
        </p>
        <form class="flex flex-col sm:flex-row gap-4 max-w-md mx-auto">
          <input 
            type="email" 
            placeholder="Enter your email"
            class="flex-1 px-6 py-4 rounded-full bg-white/10 border border-white/20 text-white placeholder:text-gray-400 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all backdrop-blur-sm"
            required
          />
          <button 
            type="submit"
            class="px-8 py-4 bg-white text-black rounded-full font-bold hover:scale-105 hover:shadow-2xl hover:shadow-purple-500/50 transition-all duration-300"
          >
            Subscribe
          </button>
        </form>
      </div>
    </div>
  </section>
</BaseLayout>

<script>
  // Category filter functionality
  const filterButtons = document.querySelectorAll('.category-filter');
  const postCards = document.querySelectorAll('.post-card');

  filterButtons.forEach(button => {
    button.addEventListener('click', () => {
      const category = button.getAttribute('data-category');
      
      // Update active button
      filterButtons.forEach(btn => {
        if (btn === button) {
          btn.classList.add('bg-white', 'text-black');
          btn.classList.remove('bg-white/10', 'text-white', 'border-white/20');
        } else {
          btn.classList.remove('bg-white', 'text-black');
          btn.classList.add('bg-white/10', 'text-white');
        }
      });

      // Filter posts
      postCards.forEach(card => {
        const postCategory = card.getAttribute('data-category');
        if (category === 'all' || postCategory === category) {
          card.style.display = 'block';
          card.classList.add('animate-fadeIn');
        } else {
          card.style.display = 'none';
        }
      });
    });
  });
</script>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
