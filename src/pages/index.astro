---
import BaseLayout from '../layouts/BaseLayout.astro';
import Sidebar from '../components/Sidebar.astro';
import { sanityClient, urlFor } from '../lib/sanity';
import { Sparkles, Heart, Compass, Coffee } from 'lucide-astro';

const allPosts = await sanityClient.fetch(`
  *[_type == "blogPost"] | order(publishedAt desc) {
        title,
    "slug": slug.current,
    excerpt,
    coverImage,
    category,
    publishedAt,
    featured
  }
`) || [];

const featuredPosts = allPosts.filter((post: any) => post.featured);
const regularPosts = allPosts.filter((post: any) => !post.featured);
---

<BaseLayout title="Bilog - Dashboard">
  <div class="flex min-h-screen bg-slate-800">
    <Sidebar />

    <div class="flex-1 lg:ml-80">
      <div class="sticky top-0 z-30 bg-bg-primary/95 backdrop-blur-xl  px-8 py-6">
        <div class="flex items-center justify-between mb-6">
          <div>
            <h1 class="text-4xl font-bold text-orange-500">All Posts</h1>
            <p class="text-text-tertiary mt-2">Explore my personal blog</p>
          </div>
          <div class="flex items-center gap-4">
            <div class="relative">
              <input 
                type="search" 
                placeholder="Search..."
                class="w-96 px-6 py-3 bg-input-bg rounded-full text-text-primary placeholder:text-input-placeholder focus:outline-none focus:ring-2 focus:ring-orange-500 border border-input-border"
              />
              <button class="absolute right-3 top-1/2 -translate-y-1/2 w-10 h-10 bg-orange-500 rounded-full flex items-center justify-center text-white hover:bg-orange-600 transition-colors">
                üîî
              </button>
            </div>
            
          </div>
        </div>

        <div class="flex items-center gap-8 overflow-x-auto">
          <button class="text-text-primary font-semibold border-b-3 border-orange-500 pb-3 whitespace-nowrap">All</button>
          <button class="text-text-tertiary hover:text-text-primary transition-colors pb-3 whitespace-nowrap">Videos</button>
          <button class="text-text-tertiary hover:text-text-primary transition-colors pb-3 whitespace-nowrap">Notes</button>
          <button class="text-text-tertiary hover:text-text-primary transition-colors pb-3 whitespace-nowrap">To-do-list</button>
          <div class="ml-auto flex gap-3">
            <button class="px-6 py-2.5 bg-orange-500 text-white rounded-full font-semibold hover:bg-orange-600 transition-colors">popular</button>
            <button class="px-6 py-2.5 bg-button-secondary-bg text-button-secondary-text rounded-full font-semibold hover:bg-bg-tertiary transition-colors">Recent</button>
          </div>
        </div>
      </div>

      <div class="px-8 py-8">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {featuredPosts.length > 0 ? (
            <a 
              href={`/blog/${featuredPosts[0].slug}`}
              class="lg:col-span-2 lg:row-span-2 bg-card-bg rounded-3xl p-8 relative overflow-hidden group hover:scale-[1.01] transition-all duration-300 border border-card-border"
            >
              <div class="relative z-10">
                <span class="inline-block px-3 py-1 bg-orange-500 text-white rounded-lg text-xs font-semibold mb-3">
                  {featuredPosts[0].category || 'Featured'}
                </span>
                <h2 class="text-3xl font-bold text-text-primary mb-3 leading-tight line-clamp-3">{featuredPosts[0].title}</h2>
                <p class="text-text-secondary text-sm mb-4 line-clamp-3 leading-relaxed">
                  {featuredPosts[0].excerpt || 'Click to read this featured post'}
                </p>
                <span class="inline-flex items-center gap-2 text-orange-500 font-semibold group-hover:gap-3 transition-all">
                  Read More ‚Üí
                </span>
              </div>
              {featuredPosts[0].coverImage && (
                <div class="absolute inset-0 opacity-10">
                  <img 
                    src={urlFor(featuredPosts[0].coverImage).width(800).url()} 
                    alt={featuredPosts[0].title}
                    class="w-full h-full object-cover"
                  />
      </div>
    )}
            </a>
          ) : (
            <div class="lg:col-span-2 lg:row-span-2 bg-card-bg rounded-3xl p-10 relative overflow-hidden backdrop-blur-sm ">
              <div class="absolute inset-0 overflow-hidden opacity-20">
                <div class="absolute top-0 left-0 w-72 h-72 bg-orange-500 rounded-full mix-blend-multiply filter blur-3xl animate-blob"></div>
                <div class="absolute top-0 right-0 w-72 h-72 bg-slate-500 rounded-full mix-blend-multiply filter blur-3xl animate-blob animation-delay-2000"></div>
                <div class="absolute bottom-0 left-20 w-72 h-72 bg-blue-500 rounded-full mix-blend-multiply filter blur-3xl animate-blob animation-delay-4000"></div>
              </div>

              <div class="absolute inset-0 overflow-hidden pointer-events-none">
                <div class="absolute top-10 right-20 animate-float">
                  <Compass size={48} class="text-orange-500/20 animate-spin-slow" />
                </div>
                <div class="absolute bottom-20 left-10 animate-float animation-delay-1000">
                  <Coffee size={40} class="text-purple-500/20 animate-bounce-slow" />
                </div>
                <div class="absolute top-40 right-40 animate-float animation-delay-2000">
                  <Heart size={36} class="text-pink-500/20 animate-pulse-slow" />
                </div>
                <div class="absolute bottom-40 right-10 animate-float animation-delay-3000">
                  <Sparkles size={44} class="text-yellow-500/20 animate-ping-slow" />
                </div>
              </div>

              <div class="relative z-10 flex flex-col h-full justify-center">
                <div class="flex items-center gap-3 mb-6 animate-fadeInUp">
                  <div class="relative">
                    <Sparkles size={32} class="text-orange-500 animate-pulse" />
                   
                  </div>
                  <h2 class="text-4xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-orange-400 via-purple-400 to-blue-400 animate-gradient">
                    Welcome to My Blog!
                  </h2>
                </div>
                
                <p class="text-xl text-text-secondary mb-6 leading-relaxed animate-fadeInUp animation-delay-200ms">
                  This is <span class="text-orange-500 font-bold animate-text-shimmer">my personal space</span> where I share my adventures, 
                  experiences, and thoughts about life, travel, food, and technology.
                </p>

                <div class="grid grid-cols-1 gap-4 mb-8">
                  <div class="flex items-start gap-3 animate-slideInLeft animation-delay-300ms p-3 rounded-xl">
                    <div class="relative">
                      <Compass size={24} class="text-orange-500 mt-1 flex-shrink-0" />
                    </div>
                    <div>
                      <h3 class="text-text-primary font-semibold mb-1">Explore Amazing Places</h3>
                      <p class="text-text-tertiary text-sm">Discover hidden gems and must-visit destinations around the world</p>
                    </div>
                  </div>
                  
                  <div class="flex items-start gap-3 animate-slideInLeft animation-delay-400ms p-3 rounded-xl">
                    <div class="relative">
                      <Coffee size={24} class="text-purple-500 mt-1 flex-shrink-0" />
                    </div>
                    <div>
                      <h3 class="text-text-primary font-semibold mb-1">Try New Things</h3>
                      <p class="text-text-tertiary text-sm">From delicious food to exciting activities and experiences</p>
                    </div>
                  </div>
                  
                  <div class="flex items-start gap-3 animate-slideInLeft animation-delay-500ms p-3 rounded-xl">
                    <div class="relative">
                      <Heart size={24} class="text-pink-500 mt-1 flex-shrink-0 animate-heartbeat" />
                    </div>
                    <div>
                      <h3 class="text-text-primary font-semibold mb-1">Real Stories</h3>
                      <p class="text-text-tertiary text-sm">Authentic experiences and personal insights shared from the heart</p>
                    </div>
                  </div>
                </div>

                <a 
                  href="/blog" 
                  class="inline-flex items-center gap-2 px-8 py-4 bg-gradient-to-r from-orange-500 to-orange-600 text-white rounded-full font-bold hover:from-orange-600 hover:to-orange-700 hover:shadow-2xl hover:shadow-orange-500/50 transition-all duration-300 w-fit group/btn animate-fadeInUp animation-delay-600ms relative overflow-hidden"
                >
                  <span class="relative z-10">Check Out My Blogs</span>
                  <svg class="w-5 h-5 group-hover/btn:translate-x-1 transition-transform relative z-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                  </svg>
                  <div class="absolute inset-0 -translate-x-full group-hover/btn:translate-x-full transition-transform duration-1000 bg-gradient-to-r from-transparent via-white/20 to-transparent"></div>
                </a>
              </div>
        </div>
      )}

          {(featuredPosts.length > 0 ? regularPosts : allPosts).slice(0, 6).map((post: any, index: number) => {
            const colors = [
              'from-orange-500 to-red-400',
              'from-yellow-500 to-orange-400',
              'from-blue-500 to-indigo-600',
              'from-emerald-500 to-teal-600',
              'from-purple-500 to-pink-600',
              'from-pink-500 to-rose-600'
            ];
            
            return (
              <a 
                href={`/blog/${post.slug}`}
                class={`bg-gradient-to-br ${colors[index % colors.length]} rounded-3xl p-6 relative overflow-hidden hover:scale-[1.02] transition-all duration-300 group flex flex-col min-h-[320px]`}
              >
                {post.coverImage ? (
                  <div class="h-36 rounded-xl mb-4 overflow-hidden bg-black/20">
                    <img 
                      src={urlFor(post.coverImage).width(400).height(250).url()} 
                      alt={post.title}
                      class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500 opacity-80"
                    />
                  </div>
                ) : (
                  <div class="h-36 rounded-xl mb-4 bg-white/10 flex items-center justify-center text-5xl">
                    {post.category === 'technology' ? 'üíª' : post.category === 'food' ? 'üçΩÔ∏è' : post.category === 'travel' ? '‚úàÔ∏è' : 'üìù'}
                  </div>
                )}
                <div class="flex-1 flex flex-col">
                  {post.category && (
                    <span class="inline-block px-2.5 py-1 bg-white/20 text-white rounded-lg text-xs font-semibold mb-2 w-fit">
                      {post.category}
                    </span>
                  )}
                  <h3 class="text-xl font-bold mb-2 text-white line-clamp-2 leading-tight">
                    {post.title}
                  </h3>
                  <p class="text-sm mb-3 line-clamp-2 text-white/80 leading-relaxed flex-1">
                    {post.excerpt || 'Click to read more...'}
                  </p>
                  <div class="flex items-center justify-between text-white/60 text-xs mt-auto pt-3 border-t border-white/10">
                    <span>{new Date(post.publishedAt).toLocaleDateString('en-US', { month: 'short', day: 'numeric' })}</span>
                    <span class="group-hover:translate-x-1 transition-transform">‚Üí</span>
                  </div>
            </div>
              </a>
            );
          })}

       

        </div>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  @keyframes blob {
    0%, 100% {
      transform: translate(0, 0) scale(1);
    }
    25% {
      transform: translate(20px, -50px) scale(1.1);
    }
    50% {
      transform: translate(-20px, 20px) scale(0.9);
    }
    75% {
      transform: translate(50px, 50px) scale(1.05);
    }
  }

  .animate-blob {
    animation: blob 7s infinite ease-in-out;
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0px) rotate(0deg);
    }
    50% {
      transform: translateY(-20px) rotate(5deg);
    }
  }

  .animate-float {
    animation: float 6s ease-in-out infinite;
  }

  @keyframes slideInLeft {
    from {
      opacity: 0;
      transform: translateX(-50px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  .animate-slideInLeft {
    animation: slideInLeft 0.6s ease-out forwards;
  }

  @keyframes gradient {
    0%, 100% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
  }

  .animate-gradient {
    background-size: 200% auto;
    animation: gradient 3s ease infinite;
  }

  @keyframes shimmer {
    0% {
      background-position: -200% center;
    }
    100% {
      background-position: 200% center;
    }
  }

  .animate-text-shimmer {
    background: linear-gradient(90deg, #f97316 0%, #fbbf24 50%, #f97316 100%);
    background-size: 200% auto;
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: shimmer 3s linear infinite;
  }

  @keyframes heartbeat {
    0%, 100% {
      transform: scale(1);
    }
    10%, 30% {
      transform: scale(0.9);
    }
    20%, 40%, 60%, 80% {
      transform: scale(1.1);
    }
    50%, 70% {
      transform: scale(1.05);
    }
  }

  .animate-heartbeat {
    animation: heartbeat 2s ease-in-out infinite;
  }

  .animate-spin-slow {
    animation: spin 20s linear infinite;
  }

  .animate-bounce-slow {
    animation: bounce 3s infinite;
  }

  .animate-pulse-slow {
    animation: pulse 4s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }

  .animate-ping-slow {
    animation: ping 3s cubic-bezier(0, 0, 0.2, 1) infinite;
  }

  .animation-delay-1000 {
    animation-delay: 1s;
  }

  .animation-delay-2000 {
    animation-delay: 2s;
  }

  .animation-delay-3000 {
    animation-delay: 3s;
  }

  .animation-delay-4000 {
    animation-delay: 4s;
  }
</style>
