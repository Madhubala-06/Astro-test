---
import BaseLayout from '../layouts/BaseLayout.astro';
import { sanityClient, urlFor } from '../lib/sanity';

// Fetch landing page data from Sanity
const landingPage = await sanityClient.fetch(`
  *[_type == "landingPage"][0] {
    heroTitle,
    heroSubtitle,
    heroImage,
    ctaButtonText,
    ctaButtonLink,
    aboutTitle,
    aboutDescription,
    aboutImage,
    skillsTitle,
    skills,
    contactTitle,
    contactDescription,
    email,
    socialLinks
  }
`);

// Fetch latest blog posts for preview
const latestPosts = await sanityClient.fetch(`
  *[_type == "blogPost"] | order(publishedAt desc)[0...3] {
    title,
    slug,
    excerpt,
    coverImage,
    publishedAt,
    category
  }
`);
---

<BaseLayout title="Home - Bil√≥g" description={landingPage?.heroSubtitle || 'Welcome to my personal blog'}>
  <!-- Hero Section with Floating Blobs -->
  <section class="relative min-h-screen flex items-center justify-center overflow-hidden bg-black">
    <!-- Animated floating blobs -->
    <div class="absolute inset-0 opacity-30 pointer-events-none">
      <div class="absolute top-20 left-20 w-96 h-96 bg-purple-600 rounded-full mix-blend-screen filter blur-3xl animate-float"></div>
      <div class="absolute top-40 right-20 w-80 h-80 bg-indigo-600 rounded-full mix-blend-screen filter blur-3xl animate-float" style="animation-delay: 3s;"></div>
      <div class="absolute bottom-20 left-1/3 w-72 h-72 bg-violet-600 rounded-full mix-blend-screen filter blur-3xl animate-float-slow"></div>
      <div class="absolute top-1/3 right-1/4 w-64 h-64 bg-blue-600 rounded-full mix-blend-screen filter blur-3xl animate-pulse-glow"></div>
    </div>

    <div class="container mx-auto px-4 relative z-10">
      <div class="text-center text-white">
        <h1 class="text-6xl md:text-8xl font-extrabold mb-6 animate-fadeInUp">
          {landingPage?.heroTitle || "Hey, we're bilog."}
        </h1>
        <p class="text-xl md:text-2xl mb-8 max-w-3xl mx-auto animate-fadeInUp text-gray-300" style="animation-delay: 0.2s;">
          {landingPage?.heroSubtitle || 'Checkout trends, travel tips, and tech news.'}
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center animate-fadeInUp" style="animation-delay: 0.4s;">
          <a 
            href={landingPage?.ctaButtonLink || '/blog'}
            class="px-8 py-4 bg-white text-black rounded-full font-bold text-lg hover:scale-105 hover:shadow-2xl hover:shadow-purple-500/50 transition-all duration-300"
          >
            {landingPage?.ctaButtonText || 'Read My Blog'} ‚Üí
          </a>
          <a 
            href="#about"
            class="px-8 py-4 bg-white/10 backdrop-blur-sm border border-white/20 text-white rounded-full font-bold text-lg hover:bg-white/20 transition-all duration-300"
          >
            Learn More
          </a>
        </div>
      </div>
    </div>

    <!-- Scroll indicator -->
    <div class="absolute bottom-10 left-1/2 transform -translate-x-1/2 animate-bounce">
      <svg class="w-6 h-6 text-white/50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </div>
  </section>

  <!-- About Section -->
  <section id="about" class="py-20 bg-black relative overflow-hidden">
    <!-- Background blobs -->
    <div class="absolute inset-0 opacity-20 pointer-events-none">
      <div class="absolute top-0 right-0 w-96 h-96 bg-purple-600 rounded-full filter blur-3xl animate-pulse-glow"></div>
    </div>

    <div class="container mx-auto px-4 relative z-10">
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <div class="scroll-fade-in">
          {landingPage?.aboutImage ? (
            <div class="relative group">
              <div class="absolute inset-0 bg-gradient-to-r from-purple-600 to-indigo-600 rounded-2xl blur-xl opacity-50 group-hover:opacity-75 transition-opacity"></div>
              <img 
                src={urlFor(landingPage.aboutImage).width(600).url()} 
                alt="About me"
                class="relative rounded-2xl border border-white/10 hover:scale-105 transition-transform duration-300"
              />
            </div>
          ) : (
            <div class="w-full h-96 bg-gradient-to-br from-purple-600/20 to-indigo-600/20 border border-white/10 rounded-2xl flex items-center justify-center backdrop-blur-sm">
              <span class="text-8xl">üë®‚Äçüíª</span>
            </div>
          )}
        </div>
        <div class="scroll-fade-in">
          <h2 class="text-5xl font-bold mb-6 gradient-text">
            {landingPage?.aboutTitle || 'About Me'}
          </h2>
          <p class="text-gray-400 text-lg leading-relaxed mb-6">
            {landingPage?.aboutDescription || 'I\'m a passionate developer and writer who loves sharing knowledge and experiences. Through this blog, I explore the intersection of technology, design, and creativity.'}
          </p>
          <div class="flex gap-4">
            <a href="/blog" class="px-6 py-3 bg-gradient-to-r from-purple-600 to-indigo-600 text-white rounded-lg font-semibold hover:shadow-lg hover:shadow-purple-500/50 hover:scale-105 transition-all duration-300">
              Read My Posts
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Skills/What I Do Section -->
  <section class="py-20 bg-zinc-950 relative overflow-hidden">
    <!-- Background gradient -->
    <div class="absolute inset-0 opacity-20 pointer-events-none">
      <div class="absolute bottom-0 left-0 w-96 h-96 bg-indigo-600 rounded-full filter blur-3xl animate-float-slow"></div>
    </div>

    <div class="container mx-auto px-4 relative z-10">
      <h2 class="text-5xl font-bold text-center mb-16 scroll-fade-in">
        <span class="gradient-text">
          {landingPage?.skillsTitle || 'What I Do'}
        </span>
      </h2>
      <div class="grid md:grid-cols-3 gap-8">
        {landingPage?.skills?.map((skill: any, index: number) => (
          <div 
            class="bg-white/5 backdrop-blur-sm border border-white/10 p-8 rounded-2xl hover:bg-white/10 hover:border-purple-500/50 hover:-translate-y-2 hover:shadow-2xl hover:shadow-purple-500/20 transition-all duration-300 scroll-fade-in group"
            style={`animation-delay: ${index * 0.1}s;`}
          >
            <div class="text-6xl mb-4 group-hover:scale-110 transition-transform">{skill.icon || 'üíª'}</div>
            <h3 class="text-2xl font-bold mb-3 text-white">{skill.title}</h3>
            <p class="text-gray-400 leading-relaxed">{skill.description}</p>
          </div>
        ))}
        
        {/* Default skills if none in Sanity */}
        {(!landingPage?.skills || landingPage.skills.length === 0) && (
          <>
            <div class="bg-white/5 backdrop-blur-sm border border-white/10 p-8 rounded-2xl hover:bg-white/10 hover:border-purple-500/50 hover:-translate-y-2 hover:shadow-2xl hover:shadow-purple-500/20 transition-all duration-300 scroll-fade-in group">
              <div class="text-6xl mb-4 group-hover:scale-110 transition-transform">üíª</div>
              <h3 class="text-2xl font-bold mb-3 text-white">Development</h3>
              <p class="text-gray-400 leading-relaxed">Building modern web applications with cutting-edge technologies.</p>
            </div>
            <div class="bg-white/5 backdrop-blur-sm border border-white/10 p-8 rounded-2xl hover:bg-white/10 hover:border-purple-500/50 hover:-translate-y-2 hover:shadow-2xl hover:shadow-purple-500/20 transition-all duration-300 scroll-fade-in group" style="animation-delay: 0.1s;">
              <div class="text-6xl mb-4 group-hover:scale-110 transition-transform">üé®</div>
              <h3 class="text-2xl font-bold mb-3 text-white">Design</h3>
              <p class="text-gray-400 leading-relaxed">Creating beautiful, user-friendly interfaces that delight users.</p>
            </div>
            <div class="bg-white/5 backdrop-blur-sm border border-white/10 p-8 rounded-2xl hover:bg-white/10 hover:border-purple-500/50 hover:-translate-y-2 hover:shadow-2xl hover:shadow-purple-500/20 transition-all duration-300 scroll-fade-in group" style="animation-delay: 0.2s;">
              <div class="text-6xl mb-4 group-hover:scale-110 transition-transform">‚úçÔ∏è</div>
              <h3 class="text-2xl font-bold mb-3 text-white">Writing</h3>
              <p class="text-gray-400 leading-relaxed">Sharing knowledge through clear, engaging technical content.</p>
            </div>
          </>
        )}
      </div>
    </div>
  </section>

  <!-- Latest Blog Posts Preview -->
  {latestPosts && latestPosts.length > 0 && (
    <section class="py-20 bg-black relative overflow-hidden">
      <!-- Floating blob -->
      <div class="absolute inset-0 opacity-20 pointer-events-none">
        <div class="absolute top-20 right-20 w-96 h-96 bg-purple-600 rounded-full filter blur-3xl animate-pulse-glow"></div>
      </div>

      <div class="container mx-auto px-4 relative z-10">
        <div class="text-center mb-16 scroll-fade-in">
          <h2 class="text-5xl font-bold mb-4 gradient-text">
            Latest Posts
          </h2>
          <p class="text-gray-400 text-lg">Check out my recent writings</p>
        </div>
        <div class="grid md:grid-cols-3 gap-8">
          {latestPosts.map((post: any, index: number) => (
            <article 
              class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-2xl overflow-hidden hover:bg-white/10 hover:border-purple-500/50 hover:-translate-y-2 hover:shadow-2xl hover:shadow-purple-500/20 transition-all duration-300 scroll-fade-in group"
              style={`animation-delay: ${index * 0.1}s;`}
            >
              {post.coverImage ? (
                <div class="relative h-48 overflow-hidden">
                  <img 
                    src={urlFor(post.coverImage).width(400).height(250).url()} 
                    alt={post.title}
                    class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                  />
                  {post.category && (
                    <span class="absolute top-3 right-3 px-3 py-1 bg-purple-600 text-white rounded-full text-xs font-semibold">
                      {post.category}
                    </span>
                  )}
                </div>
              ) : (
                <div class="h-48 bg-gradient-to-br from-purple-600/20 to-indigo-600/20 flex items-center justify-center">
                  <span class="text-6xl">üìù</span>
                </div>
              )}
              <div class="p-6">
                <h3 class="text-xl font-bold mb-3 text-white group-hover:text-purple-400 transition-colors">
                  <a href={`/blog/${post.slug.current}`}>{post.title}</a>
                </h3>
                <p class="text-gray-400 mb-4 line-clamp-3">{post.excerpt}</p>
                <a 
                  href={`/blog/${post.slug.current}`}
                  class="text-purple-400 font-semibold hover:text-purple-300 transition-colors inline-flex items-center"
                >
                  Read More
                  <svg class="w-4 h-4 ml-2 group-hover:translate-x-2 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </a>
              </div>
            </article>
          ))}
        </div>
        <div class="text-center mt-12">
          <a 
            href="/blog"
            class="inline-block px-8 py-4 bg-gradient-to-r from-purple-600 to-indigo-600 text-white rounded-full font-bold text-lg hover:shadow-lg hover:shadow-purple-500/50 hover:scale-105 transition-all duration-300"
          >
            View All Posts ‚Üí
          </a>
        </div>
      </div>
    </section>
  )}

  <!-- Contact Section -->
  <section id="contact" class="py-20 bg-zinc-950 text-white relative overflow-hidden">
    <!-- Floating blobs -->
    <div class="absolute inset-0 opacity-20 pointer-events-none">
      <div class="absolute top-0 left-0 w-96 h-96 bg-purple-600 rounded-full filter blur-3xl animate-float"></div>
      <div class="absolute bottom-0 right-0 w-96 h-96 bg-indigo-600 rounded-full filter blur-3xl animate-float-slow"></div>
    </div>

    <div class="container mx-auto px-4 text-center relative z-10">
      <div class="max-w-3xl mx-auto scroll-fade-in">
        <h2 class="text-5xl font-bold mb-6 gradient-text">
          {landingPage?.contactTitle || 'Get In Touch'}
        </h2>
        <p class="text-xl mb-8 text-gray-300">
          {landingPage?.contactDescription || 'Have a question or want to work together? I\'d love to hear from you!'}
        </p>
        
        {landingPage?.email && (
          <a 
            href={`mailto:${landingPage.email}`}
            class="inline-block px-8 py-4 bg-white text-black rounded-full font-bold text-lg hover:scale-105 hover:shadow-2xl hover:shadow-purple-500/50 transition-all duration-300 mb-8"
          >
            {landingPage.email}
          </a>
        )}

        {landingPage?.socialLinks && landingPage.socialLinks.length > 0 && (
          <div class="flex justify-center gap-4 mt-8">
            {landingPage.socialLinks.map((link: any) => (
              <a 
                href={link.url}
                target="_blank"
                rel="noopener noreferrer"
                class="w-12 h-12 bg-white/5 backdrop-blur-sm border border-white/10 rounded-full flex items-center justify-center hover:bg-purple-600 hover:border-purple-600 hover:scale-110 transition-all duration-300"
                title={link.platform}
              >
                <span class="text-2xl">{link.icon || 'üîó'}</span>
              </a>
            ))}
          </div>
        )}
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
