---
// Layout Component - Shared across all pages
import '../styles/global.css';

interface Props {
  title?: string;
}

const { title = 'Layerpath' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- SEO Meta Tags -->
    <meta name="description" content="Create interactive product demos and step-by-step guides" />
  </head>
  <body class="bg-white text-gray-900 antialiased">
    <!-- Navigation (can be extracted to component) -->
    <nav class="border-b border-gray-100">
      <div class="container mx-auto px-4 py-4 flex justify-between items-center">
        <a href="/" class="text-xl font-bold">Layerpath</a>
        <div class="flex gap-6">
          <a href="/features" class="text-gray-600 hover:text-gray-900">Features</a>
          <a href="/pricing" class="text-gray-600 hover:text-gray-900">Pricing</a>
          <a href="/learn" class="text-gray-600 hover:text-gray-900">Learn</a>
          <a href="/login" class="text-gray-600 hover:text-gray-900">Login</a>
          <a href="/signup" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700">
            Start Free
          </a>
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <slot />

    <!-- Footer -->
    <footer class="bg-gray-900 text-white py-12">
      <div class="container mx-auto px-4 text-center">
        <p>&copy; 2024 Layerpath. All rights reserved.</p>
      </div>
    </footer>
  </body>
</html>
