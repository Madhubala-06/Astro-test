---
import { sanityClient } from '../lib/sanity';
import { Twitter, Linkedin, Github, Instagram, Link } from 'lucide-astro';

const landingPage = await sanityClient.fetch(`
  *[_type == "landingPage"][0] {
    footerTagline,
    socialLinks
  }
`);

const currentYear = new Date().getFullYear();

const getSocialIcon = (platform: string) => {
  switch (platform) {
    case 'twitter': return Twitter;
    case 'linkedin': return Linkedin;
    case 'github': return Github;
    case 'instagram': return Instagram;
    default: return Link;
  }
};
---

<footer class="bg-slate-900 border-t border-slate-700 text-white lg:ml-80">
  <div class="px-8 py-12">
    <div class="max-w-7xl">
      <div class="grid md:grid-cols-4 gap-8 mb-8">
        <!-- Brand -->
        <div>
          <h3 class="text-2xl font-bold text-orange-500 mb-3">
            Bilog
          </h3>
          <p class="text-gray-400 text-sm leading-relaxed">
            {landingPage?.footerTagline || 'Travel â€¢ Tech â€¢ Design'}
          </p>
        </div>

        <!-- Quick Links -->
        <div>
          <h4 class="font-semibold text-white mb-4">Quick Links</h4>
          <ul class="space-y-2">
            <li><a href="/" class="text-gray-400 hover:text-orange-500 transition-colors text-sm">Home</a></li>
            <li><a href="/blog" class="text-gray-400 hover:text-orange-500 transition-colors text-sm">Blog</a></li>
            <li><a href="#about" class="text-gray-400 hover:text-orange-500 transition-colors text-sm">About</a></li>
            <li><a href="#contact" class="text-gray-400 hover:text-orange-500 transition-colors text-sm">Contact</a></li>
          </ul>
        </div>

        <div>
          <h4 class="font-semibold text-white mb-4">Categories</h4>
          <ul class="space-y-2">
            <li><a href="/blog?category=technology" class="text-gray-400 hover:text-orange-500 transition-colors text-sm">Technology</a></li>
            <li><a href="/blog?category=design" class="text-gray-400 hover:text-orange-500 transition-colors text-sm">Design</a></li>
            <li><a href="/blog?category=tutorial" class="text-gray-400 hover:text-orange-500 transition-colors text-sm">Tutorials</a></li>
            <li><a href="/blog?category=personal" class="text-gray-400 hover:text-orange-500 transition-colors text-sm">Personal</a></li>
          </ul>
        </div>

        <div>
          <h4 class="font-semibold text-white mb-4">Connect</h4>
          <div class="flex gap-3">
            {landingPage?.socialLinks && landingPage.socialLinks.length > 0 ? (
              landingPage.socialLinks.map((link: any) => {
                const IconComponent = getSocialIcon(link.platform);
                return (
                  <a 
                    href={link.url}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="w-10 h-10 bg-slate-800 border border-slate-700 rounded-lg flex items-center justify-center hover:bg-orange-500 hover:border-orange-500 hover:scale-110 transition-all duration-300 text-gray-400 hover:text-white"
                    title={link.platform}
                  >
                    <IconComponent size={20} />
                  </a>
                );
              })
            ) : (
              <>
                <a href="#" class="w-10 h-10 bg-slate-800 border border-slate-700 rounded-lg flex items-center justify-center hover:bg-orange-500 hover:border-orange-500 hover:scale-110 transition-all duration-300 text-gray-400 hover:text-white">
                  <Twitter size={20} />
                </a>
                <a href="#" class="w-10 h-10 bg-slate-800 border border-slate-700 rounded-lg flex items-center justify-center hover:bg-orange-500 hover:border-orange-500 hover:scale-110 transition-all duration-300 text-gray-400 hover:text-white">
                  <Linkedin size={20} />
                </a>
                <a href="#" class="w-10 h-10 bg-slate-800 border border-slate-700 rounded-lg flex items-center justify-center hover:bg-orange-500 hover:border-orange-500 hover:scale-110 transition-all duration-300 text-gray-400 hover:text-white">
                  <Github size={20} />
                </a>
              </>
            )}
          </div>
        </div>
      </div>

      <div class="pt-8 border-t border-slate-700">
        <p class="text-gray-500 text-sm text-center">
          Â© {currentYear} Bilog. Built with ðŸ’œ using Astro & Sanity.
        </p>
      </div>
    </div>
  </div>
</footer>
