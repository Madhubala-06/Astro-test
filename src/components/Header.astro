---
const currentPath = Astro.url.pathname;
const showHeader = currentPath.startsWith('/blog/');
---

{showHeader && (
  <header class="fixed top-0 left-0 right-0 z-50 bg-black/80 backdrop-blur-xl border-b border-white/10 transition-all duration-300 lg:hidden" id="header">
    <nav class="container mx-auto px-4 py-4">
      <div class="flex items-center justify-between">
        <!-- Logo -->
        <a href="/" class="text-2xl font-bold gradient-text hover:scale-105 transition-transform duration-300">
          Bilog
        </a>

        <!-- Back Button -->
        <a 
          href="/blog"
          class="px-4 py-2 bg-white/5 border border-white/10 text-gray-300 rounded-lg font-medium hover:bg-white/10 transition-all duration-300 flex items-center gap-2"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
          Back
        </a>
      </div>
    </nav>
  </header>
)}
